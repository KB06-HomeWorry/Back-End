<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.checklist.mapper.ChecklistUserAnswerMapper">

    <select id="findByChecklistIdAndUserId" resultType="org.scoula.checklist.domain.ChecklistUserAnswerVO">
        SELECT *
        FROM ChecklistUserAnswer
        WHERE checklist_id = #{checklistId}
          AND user_id = #{userId}
    </select>

</mapper>